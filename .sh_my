# ╔════════════════════════════╗
# ║ My shellhrc further stuffs ║
# ╚════════════════════════════╝

# Mybin
export PATH=$PATH:~/.bin
export PATH=$PATH:~/.local/bin
export PATH=$PATH:~/.local/share/flatpak/exports/bin/ #flatpak apps

# Anaconda
#source ~/anaconda3/etc/profile.d/conda.sh
#export PATH+=:~/anaconda3/bin

# PYTHONPATH
export PYTHONPATH=$PYTHONPATH:~/.local/lib
export PYTHONPATH=$PYTHONPATH:~/.local/lib/python3.7/site-packages/ 
export PYTHONPATH=$PYTHONPATH:~/.local/lib/python2.7/site-packages/

# Julia
export PATH=$PATH:~/.julia/julia/bin

# Ruby rbenv
export PATH=$PATH:~/.rbenv/bin:~/.rbenv/shims
eval "$(rbenv init -)"

# LD LIBRARY PATH
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$HOME/.local/lib/

# PKG_CONFIG
export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:$HOME/.local/lib/pkgconfig/

# XDG
export XDG_CONFIG_HOME=$HOME/.config

# ROOT
#source /home/alessandro/projects/PDF/root-6.18.04/obj/bin/thisroot.sh

# Autocompletion for aliases
# source make-completion-wrapper.sh

# Disable Suspend, enabling the forward search (Ctrl+S)
stty -ixon

# Desktoprc should be sourced at login, not by any shell
#source $HOME/.desktoprc

export BROWSER=firefox
export EDITOR=vim
export VISUAL=ewrap

# go command
# (https://blog.patshead.com/2011/05/my-take-on-the-go-command.html)

source $HOME/.bin/go.sh
source $HOME/.bin/vims.sh

# fasd
eval "$(fasd --init auto)"

# npm config (install user-wide, i.e. global w/o sudo)
NPM_PACKAGES="${HOME}/.npm-packages"
export PATH="$PATH:$NPM_PACKAGES/bin"
# Preserve MANPATH if you already defined it somewhere in your config.
# Otherwise, fall back to `manpath` so we can inherit from `/etc/manpath`.
export MANPATH="${MANPATH-$(manpath)}:$NPM_PACKAGES/share/man"

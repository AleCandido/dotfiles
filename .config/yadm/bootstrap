# Start with:
#
# # follow instructions at:
# https://docs.github.com/en/free-pro-team@latest/github/authenticating-to-github/connecting-to-github-with-ssh
# ssh-keygen -t rsa -b 4096 -C "candido.ale@gmail.com"
# eval "$(ssh-agent -s)"
# ssh-add ~/.ssh/id_rsa
# sudo apt-get install xclip
# xclip -selection clipboard < ~/.ssh/id_rsa.pub
# ssh -T git@github.com
#
# yadm clone git@github.com:AleCandido/dotfiles.git
# yadm bootstrap
sudo apt install -y curl
sudo apt install -y build-essential cmake autoconf libtool

# terminal installation
sudo apt install kitty

# zsh
sudo apt install zsh
chsh --shell /bin/zsh $USER
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
yadm restore .zshrc
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting
git clone https://github.com/zsh-users/zsh-completions ${ZSH_CUSTOM:=~/.oh-my-zsh/custom}/plugins/zsh-completions
git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions
git clone --depth=1 https://github.com/romkatv/powerlevel10k.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k
sudo apt install fonts-font-awesome
echo "\e[94mRemember to install further fonts (already in '$HOME/.local/share/fonts' but zipped)"

# fortran installation
sudo apt install gfortran

# python pip installation
curl https://bootstrap.pypa.io/get-pip.py -o get-pip.py
sudo apt-get install python3-distutils python3-venv
python3 -m ensurepip
#python3 get-pip.py
#rm -f get-pip.py
pip install virtualenv

# yarn installation
curl -sS https://dl.yarnpkg.com/debian/pubkey.gpg | sudo apt-key add -
echo "deb https://dl.yarnpkg.com/debian/ stable main" | sudo tee /etc/apt/sources.list.d/yarn.list
sudo apt update && sudo apt install yarn
sudo apt install npm

# rust
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh

# go
wget https://golang.org/dl/go1.15.7.linux-amd64.tar.gz
tar -C $HOME/.local -xzf go1.15.7.linux-amd64.tar.gz
mv $HOME/.local/go $HOME/.go
rm -f go1.15.7.linux-amd64.tar.gz

# lua
sudo apt install lua5.3

# vim installation
sudo apt install vim neovim
curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
vim +PlugInstall
sudo apt install python3-dev
#python3 $HOME/.vim/plugged/YouCompleteMe/install.py --all
# vim externals
GO111MODULE=on go get mvdan.cc/sh/v3/cmd/shfmt
echo "\e[35mInstall universal-ctags:\e[39m https://github.com/universal-ctags/ctags"


# tmux installation
sudo apt install tmux
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
sudo apt install urlview
$HOME/.tmux/plugins/tpm/bin/install_plugins

# utils
sudo apt install hub
sudo apt install fasd
sudo apt install ripgrep
sudo apt install fd-find
sudo apt install htop
sudo apt install ncdu
sudo apt install tldr && tldr -u
sudo apt install jq
sudo apt install pdfgrep
sudo apt install network-manager-vpnc-gnome
sudo apt install rename
sudo apt install bat
#
sudo apt install thefuck figlet lolcat cowsay neofetch
git clone --depth 1 git@github.com:eth-p/bat-extras.git $HOME/.bin/bat-extras
# sudo apt install rbenv
# --- through python
pip install glances bpytop speedtest-cli
pip install invoke
pip install fortran-language-server
# --- through rust
cargo install exa
cargo install git-delta
cargo install --locked bat
# --- through yarn
yarn global add npms npms-cli
yarn global add gitignore fixme
yarn global add prettier tsc tsserver webpack webpack-cli
yarn global add dockerfile-language-server-nodejs \
                graphql-language-service-cli \
                sql-language-server
# --- with git
git clone https://github.com/eth-p/bat-extras.git --depth 1 && cd bat-extras && ./build.sh --install --prefix=$HOME/.local
rm -rf bat-extras; cd .. && rm -rf bat-extras

# gnome extensions
sudo apt install gnome-tweaks
sudo apt install gnome-tweak-tool

# xournalpp
sudo add-apt-repository ppa:apandada1/xournalpp-stable
sudo apt update && sudo apt install xournalpp
# telegram
sudo add-apt-repository ppa:atareao/telegram
sudo apt update && sudo apt install telegram

# clean up
sudo apt autoremove -y

    "TCP"
    "VCS_Info"
    "VCS_Info/Backends"
    "Zftp"
    "Zle"
)
for subf in $functions_subfolders; do
    FPATH="$FPATH:$HOME/.local/usr/share/zsh/functions/$subf"
done

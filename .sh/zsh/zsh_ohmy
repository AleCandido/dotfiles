FPATH="$HOME/.local/usr/share/zsh/site-functions"
declare -a functions_subfolders=(
    "Calendar"
    "Chpwd"
    "Completion"
    "Completion/AIX"
    "Completion/Base"
    "Completion/BSD"
    "Completion/Cygwin"
